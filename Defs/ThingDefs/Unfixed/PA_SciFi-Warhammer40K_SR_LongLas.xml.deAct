	<ThingDef ParentName="BaseHumanGun">
		<defName>Gun_LongLas_PA</defName>
		<label>LongLas</label>
		<description>Favoured by Imperial Guard Sharpshooters, the Long-Las is a specially modified version of the Lasgun constructed for added range and accuracy.  </description>
		<graphicData>
		<texPath>Things/Item/Warhammer40K/Gun_SR_LongLas</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>InteractChargeRifle</soundInteract>
		<statBases>
		<MarketValue>1050</MarketValue>
			<AccuracyTouch>0.95</AccuracyTouch>
			<AccuracyShort>0.95</AccuracyShort>
			<AccuracyMedium>0.95</AccuracyMedium>
			<AccuracyLong>0.95</AccuracyLong>
		<RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
