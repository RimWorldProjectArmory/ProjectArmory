	<ThingDef Name="BaseWeaponNeolithic" Abstract="True">
		<category>Item</category>

		<thingClass>ThingWithComps</thingClass>
		<equipmentType>Primary</equipmentType>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<selectable>True</selectable>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			  <MaxHitPoints>100</MaxHitPoints>
			  <Flammability>1.0</Flammability>
			  <DeteriorationRate>1</DeteriorationRate>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<techLevel>Neolithic</techLevel>
		<weaponTags>
			<li>Neolithic</li>
		</weaponTags>
		<thingCategories>
			<li>Weapons</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
		<compClass>CompQuality</compClass>
		</li>
		<li>
			<compClass>CompArt</compClass>
			<nameMaker>NamerGun</nameMaker>
			<descriptionMaker>ArtWeaponGun</descriptionMaker>
			<minQualityForArtistic>Excellent</minQualityForArtistic>
		</li>
		</comps>
	</ThingDef>



	<ThingDef Name="BaseProjectileNeolithic" Abstract="True">
		<category>Projectile</category>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Projectile</altitudeLayer>
		<thingClass>Bullet</thingClass>
		<label>arrow</label>
		<useHitPoints>False</useHitPoints>
		<neverMultiSelect>True</neverMultiSelect>
		<shaderType>Transparent</shaderType>
	</ThingDef>

	<!-- ============================================================== -->
	
	<ThingDef Class="Extended_Bullet.NewThingDefs" ParentName="BaseProjectileNeolithic">
		<defName>Bolas_Thrown</defName>
		<label>Bolas</label>
		<thingClass>Extended_Bullet.Ex_Bullet</thingClass>
		<graphicData>
		<texPath>Things/Projectile/ThrownWeapon_Bolas</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<DamageAmountBase>10</DamageAmountBase>
			<Speed>25</Speed>
		</projectile>
		<RotationSpeed>25</RotationSpeed>
		<ReturnToOwner>false</ReturnToOwner>
		<DmgEffOnImpact>true</DmgEffOnImpact>
	</ThingDef>

	<ThingDef ParentName="BaseWeaponNeolithic">
		<defName>Bolas</defName>
		<label>Bolas</label>
		<description> Bolas are throwing weapons made of weights interconnected by cords. This one has three weights.</description>
		<graphicData>
		<texPath>Things/Item/ThrownWeapon_Bolas</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<weaponTags>
			<li>NeolithicRanged</li>
		</weaponTags>
		<soundInteract>Interact_BeatFire</soundInteract>
		<statBases>
			<MarketValue>70</MarketValue>
			<AccuracyTouch>0.91</AccuracyTouch>
			<AccuracyShort>0.88</AccuracyShort>
			<AccuracyMedium>0.82</AccuracyMedium>
			<AccuracyLong>0.78</AccuracyLong>
			<RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<projectileDef>Bolas_Thrown</projectileDef>
				<warmupTicks>110</warmupTicks>
				<range>20</range>
				<soundCast>Interact_BeatFire</soundCast>
			</li>
		</verbs>

	</ThingDef>
</ThingDefs>