		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<techLevel>Midworld</techLevel>
		<thingCategories>
			<li>WeaponsRangedLaunchers</li>
		</thingCategories>
		<comps>
		<li>
			<compClass>CompForbiddable</compClass>
		</li>
		<li>
		<compClass>CompQuality</compClass>
		</li>
		</comps>
		<smeltProducts>
		  <Steel>10</Steel>
		</smeltProducts>
	</ThingDef>

  <ThingDef Name="BaseHumanGun" ParentName="BaseGun" Abstract="True">
		<weaponTags>
			<li>Gun</li>
			<li>GunHeavy</li>
		</weaponTags>
  </ThingDef>
 
   

	<!-- ========================== SPECIFICS ============================== -->



 
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Gun_Chakram_PA</defName>
    <label>Chakram</label>
		<description> A bundle of Chakram. These curcular flat metal rings are sharpened on the outer edge to be thrown at the enemy.</description>
    <graphicData>
		<texPath>Things/Item/Gun_L_Chakram</texPath>
    <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costList>
      <WoodLog>60</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <MarketValue>70</MarketValue>
      <AccuracyTouch>0.91</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.62</AccuracyMedium>
      <AccuracyLong>0.46</AccuracyLong>
      <RangedWeapon_Cooldown>0.60</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRanged</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Chakram_Thrown_PA</projectileDef>
        <warmupTicks>110</warmupTicks>
        <range>20</range>
        <soundCast>Interact_BeatFire</soundCast>
      </li>
    </verbs>
  </ThingDef>
