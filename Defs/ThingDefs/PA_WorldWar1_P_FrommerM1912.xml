		<statBases>
			<MarketValue>130</MarketValue>
			<AccuracyTouch>0.95</AccuracyTouch>
			<AccuracyShort>0.76</AccuracyShort>
			<AccuracyMedium>0.68</AccuracyMedium>
			<AccuracyLong>0.61</AccuracyLong>
			<RangedWeapon_Cooldown>0.64</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
